# Dotfiles otomatik g√ºncelleme fonksiyonu
gitu() {
    # Eƒüer bir mesaj girilirse onu kullan, girilmezse varsayƒ±lan mesajƒ± atar
    local msg="${1:-dotfiles g√ºncellendi: $(date +'%Y-%m-%d %H:%M')}"
    
    git add .
    git commit -m "$msg"
    git push origin main
}


