# Not ekleme fonksiyonu (Tarih damgalƒ±)
n() {
    local NOT_DOSYASI="$HOME/dotfiles/not/.config/notlarim/notlarim.txt"
    
    # Eƒüer n yazƒ±p yanƒ±na bir ≈üey yazmazsan sadece notlarƒ± g√∂sterir
    if [ -z "$1" ]; then
        echo "--- Mevcut Notlarƒ±n ---"
        cat "$NOT_DOSYASI"
    else
        # Tarih formatƒ±: [17-02-2026 17:15]
        local TARIH=$(date '+[%d-%m-%Y %H:%M]')
        echo "$TARIH $*" >> "$NOT_DOSYASI"
        echo "Not eklendi: $*"
    fi
}

