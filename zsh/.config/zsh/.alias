# yy fonksiyonu: Dosya i√ßeriƒüini kopyalar
yy() {
    if [ -n "$1" ]; then
        if [ -f "$1" ]; then
            cat "$1" | wl-copy
            echo "‚úÖ '$1' panoya kopyalandƒ±."
        else
            echo "‚ùå Hata: '$1' bir dosya deƒüil."
        fi
    else
        echo "üí° Kullanƒ±m: yy dosya_adƒ±"
    fi
}

